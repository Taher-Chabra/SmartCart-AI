{
  "extends": "../tsconfig.base.json",

  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "tsBuildInfoFile": "./.tsbuildinfo",
    "emitDeclarationOnly": false,
    "typeRoots": [
      "../node_modules/.pnpm/**/node_modules/@types",
      "./node_modules"
    ]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
