{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "types": ["node", "express"],
    "typeRoots": [
      "../../node_modules/@types",
      "./node_modules/@types"
    ],
    "composite": true,
    "tsBuildInfoFile": "./.tsbuildinfo",
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts"],
}